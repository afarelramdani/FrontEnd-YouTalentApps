<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".talent.ProfileTalentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:targetApi="lollipop" />


        <ScrollView
            android:id="@+id/sv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAE7E7"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame_talent_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="#EAE7E7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cs_frame_1_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/white"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/tv_picture_talent_profile"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/jipyeong"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_name_talent_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/ahmad_farhan_el_ramdhani"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/tv_picture_talent_profile"

                        />

                    <TextView
                        android:id="@+id/tv_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="Web Developer"
                        android:textSize="15sp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_talent_profile" />

                    <TextView
                        android:id="@+id/tv_location_icon_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_baseline_location_on_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_job_profile" />

                    <TextView
                        android:id="@+id/tv_location_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:gravity="left"
                        android:text="Sukabumi, Jawa Barat"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_job_profile" />

                    <TextView
                        android:id="@+id/tv_type_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="Talent"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_location_icon_profile" />

                    <TextView
                        android:id="@+id/tv_desc_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_type_profile" />

                    <Button
                        android:id="@+id/btn_edit_hire_talent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/radiusbuttonround"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#ECA456"
                        android:textAllCaps="false"
                        android:text="Edit Profile"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_desc_profile" />

                    <TextView
                        android:id="@+id/tv_skill_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="Skill"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_edit_hire_talent" />

                    <TextView
                        android:id="@+id/tv_skill1_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="NodeJS"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill_profile" />

                    <TextView
                        android:id="@+id/tv_skill2_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Java"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_skill1_talent_home"
                        app:layout_constraintTop_toBottomOf="@id/tv_skill_profile" />

                    <TextView
                        android:id="@+id/tv_skill3_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="JavaScipt"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_skill2_talent_home"
                        app:layout_constraintTop_toBottomOf="@id/tv_skill_profile" />

                    <TextView
                        android:id="@+id/tv_skill4_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="NodeJS"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill1_talent_home" />

                    <TextView
                        android:id="@+id/tv_skill5_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="NodeJs"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_skill4_talent_home"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill2_talent_home" />

                    <TextView
                        android:id="@+id/tv_skill6_talent_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_skill"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="PHP"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_skill5_talent_home"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill3_talent_home" />


                    <TextView
                        android:id="@+id/tv_email_icon_profile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/ic_baseline_email_24"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill4_talent_home" />

                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/ahmadfarhanel_gmail_com"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_email_icon_profile"
                        app:layout_constraintTop_toBottomOf="@+id/tv_skill4_talent_home"
                        app:layout_goneMarginTop="30dp" />

                    <TextView
                        android:id="@+id/tv_ig_icon_profile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ig"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_email_icon_profile" />

                    <TextView
                        android:id="@+id/tv_ig_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/afarelramdani"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_email_icon_profile"
                        app:layout_constraintTop_toBottomOf="@+id/tv_email_profile"
                        app:layout_goneMarginTop="30dp" />

                    <TextView
                        android:id="@+id/tv_github_icon_profile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/github_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_ig_icon_profile" />

                    <TextView
                        android:id="@+id/tv_github_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/afarelramdani"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_ig_icon_profile"
                        app:layout_constraintTop_toBottomOf="@+id/tv_ig_profile"
                        app:layout_goneMarginTop="30dp" />

                    <TextView
                        android:id="@+id/tv_gitlab_icon_profile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/gitlab_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_github_icon_profile" />

                    <TextView
                        android:id="@+id/tv_gitlab_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/afarelramdani"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/tv_github_icon_profile"
                        app:layout_constraintTop_toBottomOf="@+id/tv_github_profile"
                        app:layout_goneMarginTop="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cs_frame_1_profile">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_marginTop="20dp"
                        app:tabSelectedTextColor="@android:color/black"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:menu="@menu/bottom_navigation_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
