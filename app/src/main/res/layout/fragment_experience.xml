    <RelativeLayout
        android:id="@+id/rl_frame_1_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="145dp"
            android:background="#EAE7E7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/iv_experience1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ali" />

        <TextView
            android:id="@+id/tv_type_experience1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_experience1"
            android:text="Engineer"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_experience1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type_experience1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="90dp"
            android:layout_toRightOf="@+id/iv_experience1"
            android:text="Alibaba"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_until_experience1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_experience1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_experience1"
            android:text="Agustus 2015 - Desember 2017"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time_experience1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_until_experience1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_experience1"
            android:text="6 Months"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_desc_experience1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_experience1"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/iv_experience1"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
            android:textSize="12sp" />
    </RelativeLayout>

