<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_1_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_talent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dalmiku"
            app:layout_constraintLeft_toRightOf="@id/tv_skill1_talent_home"
            />


        <TextView
            android:id="@+id/tv_type_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Web Developer"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_talent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="90dp"
            android:gravity="right"
            android:text="Ahmad Farhan El Ramdhani"
            app:layout_constraintLeft_toRightOf="@id/iv_talent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_skill1_talent_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange_skill"
            android:gravity="center"
            android:padding="4dp"
            android:text="Javascript"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/iv_talent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_talent" />

        <TextView
            android:id="@+id/tv_skill2_talent_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange_skill"
            android:gravity="center"
            android:padding="4dp"
            android:text="Python"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_skill1_talent_home"
            app:layout_constraintTop_toBottomOf="@id/tv_name_talent" />

        <TextView
            android:id="@+id/tv_skill3_talent_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/orange_skill"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="4dp"
            android:text="NodeJS"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_talent"
            app:layout_constraintTop_toBottomOf="@id/tv_skill1_talent_home" />

        <TextView
            android:id="@+id/tv_skill4_talent_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="12dp"
            android:background="@color/orange_skill"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Golang"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_skill3_talent_home"
            app:layout_constraintTop_toBottomOf="@+id/tv_skill2_talent_home"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            tools:layout_editor_absoluteY="70dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>